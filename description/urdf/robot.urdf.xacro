<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">
    <xacro:arg name="prefix" default="" />
    <xacro:include filename="$(find lucia_controller)/urdf/robot_description.urdf.xacro" />
    <xacro:include filename="$(find lucia_controller)/ros2_control/robot.ros2_control.xacro" />
    <xacro:robot prefix="$(arg prefix)" />
    <xacro:robot_ros2_control name="Robot" prefix="$(arg prefix)" />
</robot>